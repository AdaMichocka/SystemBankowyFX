<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="adamichocka.NewUserController"
            style="-fx-background-color: #8af2ae" maxHeight="300"
            maxWidth="500" prefHeight="300" prefWidth="500">

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="NOWY UŻYTKOWNIK" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   GridPane.columnSpan="2"
                   style="-fx-font: System bold; -fx-text-alignment: center; -fx-font-size: 40"/>

            <Label text="Login użytkownika: " GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-control-inner-background: #8af2ae;-fx-font-size: 20; -fx-font-size: 20"/>
            <TextField fx:id="loginField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Hasło: " GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-control-inner-background: #8af2ae;-fx-font-size: 20; -fx-font-size: 20"/>
            <TextField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Imię: " GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-control-inner-background: #8af2ae;-fx-font-size: 20; -fx-font-size: 20"/>
            <TextField fx:id="firstNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Nazwisko: " GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-control-inner-background: #8af2ae;-fx-font-size: 20; -fx-font-size: 20"/>
            <TextField fx:id="lastNameField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Numer konta: " GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-control-inner-background: #8af2ae;-fx-font-size: 20; -fx-font-size: 20"/>
            <TextField fx:id="accountNumberField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        </GridPane>
    </content>

</DialogPane>
